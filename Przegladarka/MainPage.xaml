<Page
    x:Class="Przegladarka.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Przegladarka"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="White">

    <Grid>
        <Grid.Background>
            <AcrylicBrush TintOpacity="0.695"/>
        </Grid.Background>
        <Button x:Name="Prev" Margin="10,10,0,0" VerticalAlignment="Top" Click="Prev_Click">
            <SymbolIcon Symbol="Back" />
        </Button>
        <Button x:Name="Next" Margin="55,10,0,0" VerticalAlignment="Top" Click="Next_Click">
            <SymbolIcon Symbol="Forward" />
        </Button>
        <Button x:Name="Stop" Margin="100,10,0,0" VerticalAlignment="Top" Click="Stop_Click">
            <SymbolIcon Symbol="Cancel" HorizontalAlignment="Right" Width="20" />
        </Button>
        <Button x:Name="Reload" Margin="145,10,0,0" VerticalAlignment="Top" Click="Reload_Click">
            <SymbolIcon Symbol="Refresh" HorizontalAlignment="Right" Width="20" />
        </Button>
        <Button x:Name="Search" Margin="1230,10,0,0" VerticalAlignment="Top" Click="Search_Click">
            <SymbolIcon HorizontalAlignment="Right" Width="20" Symbol="Find" />
        </Button>
        <Button x:Name="AddToFav" Margin="1185,10,0,0" VerticalAlignment="Top" Click="AddToFav_Click">
            <SymbolIcon HorizontalAlignment="Right" Width="20" Symbol="Favorite" />
        </Button>
        <ComboBox Margin="200,10,0,0" Width="980"/>
        <TextBox x:Name="TextBoxSearch" HorizontalAlignment="Center" Margin="0,47,0,0" Text="" VerticalAlignment="Top" Width="1260" KeyDown="TextBoxSearch_KeyDown"/>
        <WebView x:Name="webView"  Margin="10,94,10,21"/>
        

    </Grid>
</Page>
